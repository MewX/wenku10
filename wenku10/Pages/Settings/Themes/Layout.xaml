<Page
    x:Class="wenku10.Pages.Settings.Themes.Layout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wenku10.Pages.Settings.Themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">

    <Grid Background="{StaticResource MajorBackgroundBrush}">
        <Pivot>
            <!-- Main Page -->
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock x:Uid="/Settings/Appearance_Layout_MainPage"
                               Text="MainPage" />
                </PivotItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="SectionListContext">
                        <ComboBox x:Name="SectionChoices" Grid.Row="0"
                                  ItemsSource="{Binding SectionList}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Payload"
                                  SelectionChanged="SectionList_SelectionChanged">
                            <ComboBox.Header>
                                <TextBlock x:Uid="/Settings/Layout_MainPage_CSec_Choice"
                                           Foreground="{StaticResource MinorBrush}"
                                           Text="Custom Section Choice" />
                            </ComboBox.Header>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </PivotItem>
            <!-- Navigation Pages -->
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock x:Uid="/Settings/Appearance_Layout_NavPages"
                               Text="NavigationPages" />
                </PivotItem.Header>
                <StackPanel>
                    <ToggleSwitch x:Name="TogNAlign" Toggled="Toggled_NAlign">
                        <ToggleSwitch.Header>
                            <TextBlock Foreground="{StaticResource MinorBrush}"
                                       x:Uid="/Settings/Layout_Alignment"
                                       Text="Aligment" />
                        </ToggleSwitch.Header>
                        <ToggleSwitch.OnContent>
                            <TextBlock x:Uid="/Settings/Layout_Aligment_Horizontal"
                                       Foreground="{StaticResource MajorBrush}"
                                       Text="Enable" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock x:Uid="/Settings/Layout_Aligment_Vertical"
                                       Foreground="{StaticResource MinorBrush}"
                                       Text="Disabled" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                </StackPanel>
            </PivotItem>
            <!-- Table of Contents -->
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock x:Uid="/AppBar/TOC"
                               Text="Table of Contents" />
                </PivotItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <!-- Toggle FlowDirection -->
                        <ToggleSwitch x:Name="TogBInFlo" Toggled="Toggled_BFlow">
                            <ToggleSwitch.Header>
                                <TextBlock Foreground="{StaticResource MinorBrush}"
                                           x:Uid="/Settings/Layout_FlowDirection"
                                           Text="FlowDirection" />
                            </ToggleSwitch.Header>
                            <ToggleSwitch.OnContent>
                                <TextBlock x:Uid="/Settings/Layout_FlowRight"
                                           Foreground="{StaticResource MajorBrush}"
                                           Text="RightToLeft" />
                            </ToggleSwitch.OnContent>
                            <ToggleSwitch.OffContent>
                                <TextBlock x:Uid="/Settings/Layout_FlowLeft"
                                           Foreground="{StaticResource MinorBrush}"
                                           Text="LeftToRight" />
                            </ToggleSwitch.OffContent>
                        </ToggleSwitch>
                        <!-- Toggle Aligment of Table of Contents -->
                        <ToggleSwitch x:Name="TogTOCAlign" Toggled="Toggled_TOCAlign" Tag="HorizontalTOC">
                            <ToggleSwitch.Header>
                                <TextBlock x:Uid="/Settings/Layout_Alignment"
                                           Foreground="{StaticResource MinorBrush}"
                                           Text="TOC Alignment" />
                            </ToggleSwitch.Header>
                            <ToggleSwitch.OnContent>
                                <TextBlock x:Uid="/Settings/Layout_Aligment_Horizontal"
                                           Foreground="{StaticResource MajorBrush}"
                                           Text="Enabled" />
                            </ToggleSwitch.OnContent>
                            <ToggleSwitch.OffContent>
                                <TextBlock x:Uid="/Settings/Layout_Aligment_Vertical"
                                           Foreground="{StaticResource MinorBrush}"
                                           Text="Disabled" />
                            </ToggleSwitch.OffContent>
                        </ToggleSwitch>
                    </StackPanel>
                </Grid>
            </PivotItem>
            <!-- Content Reader -->
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock x:Uid="/Settings/Appearance_ContentReader"
                               Text="ContentReader" />
                </PivotItem.Header>
                <StackPanel>
                    <ToggleSwitch x:Name="TogCAlign" Toggled="Toggled_CAlign">
                        <ToggleSwitch.Header>
                            <TextBlock Foreground="{StaticResource MinorBrush}"
                                       x:Uid="/Settings/Layout_Alignment"
                                       Text="Aligment" />
                        </ToggleSwitch.Header>
                        <ToggleSwitch.OnContent>
                            <TextBlock x:Uid="/Settings/Layout_Aligment_Horizontal"
                                       Foreground="{StaticResource MajorBrush}"
                                       Text="Enable" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock x:Uid="/Settings/Layout_Aligment_Vertical"
                                       Foreground="{StaticResource MinorBrush}"
                                       Text="Disabled" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                    <ToggleSwitch x:Name="TogContFlo" Toggled="Toggled_CFlow">
                        <ToggleSwitch.Header>
                            <TextBlock Foreground="{StaticResource MinorBrush}"
                                       x:Uid="/Settings/Layout_FlowDirection"
                                       Text="FlowDirection" />
                        </ToggleSwitch.Header>
                        <ToggleSwitch.OnContent>
                            <TextBlock x:Uid="/Settings/Layout_FlowRight"
                                       Foreground="{StaticResource MajorBrush}"
                                       Text="RightToLeft" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock x:Uid="/Settings/Layout_FlowLeft"
                                       Foreground="{StaticResource MinorBrush}"
                                       Text="LeftToRight" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                    <ToggleSwitch x:Name="TogPageClick" Toggled="Toggled_PageClick">
                        <ToggleSwitch.Header>
                            <TextBlock Foreground="{StaticResource MinorBrush}"
                                       x:Uid="/Settings/Layout_ContentReader_UsePageClick"
                                       Text="UsePageClick" />
                        </ToggleSwitch.Header>
                        <ToggleSwitch.OnContent>
                            <TextBlock x:Uid="/Settings/Enabled"
                                       Foreground="{StaticResource MajorBrush}"
                                       Text="Enable" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock x:Uid="/Settings/Disabled"
                                       Foreground="{StaticResource MinorBrush}"
                                       Text="Disable" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                    <ToggleSwitch x:Name="TogDoubleTap" Toggled="Toggled_DoubleTap">
                        <ToggleSwitch.Header>
                            <TextBlock Foreground="{StaticResource MinorBrush}"
                                       x:Uid="/Settings/Layout_ContentReader_UseDoubleTap"
                                       Text="UseDoubleTap" />
                        </ToggleSwitch.Header>
                        <ToggleSwitch.OnContent>
                            <TextBlock x:Uid="/Settings/Enabled"
                                       Foreground="{StaticResource MajorBrush}"
                                       Text="Enable" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock x:Uid="/Settings/Disabled"
                                       Foreground="{StaticResource MinorBrush}"
                                       Text="Disable" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
