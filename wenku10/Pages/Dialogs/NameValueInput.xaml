<ContentDialog
    x:Class="wenku10.Pages.Dialogs.NameValueInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wenku10.Pages.Dialogs.Sharers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    Background="{StaticResource MajorBackgroundBrush}"
    Style="{StaticResource ScrollContentDialog}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">
    <ContentDialog.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource GRButton}" />
    </ContentDialog.Resources>
    <ContentDialog.Title>
        <TextBlock x:Name="TitleText" Foreground="{StaticResource RelativeMajorBackgroundBrush}"
                   Text="{Binding}" />
    </ContentDialog.Title>

    <StackPanel>
        <!-- Name -->
        <TextBlock x:Name="NameLbl" Text="Name" Foreground="{StaticResource MajorBrush}" />
        <TextBox x:Name="NameInput" Margin="0,0,0,10" KeyDown="OnKeyDown"/>
        <!-- Value -->
        <TextBlock x:Name="ValueLbl" Foreground="{StaticResource MajorBrush}" Text="Value" />
        <TextBox x:Name="ValueInput" Margin="0,0,0,10" KeyDown="OnKeyDown"/>
    </StackPanel>
</ContentDialog>